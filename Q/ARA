    <div class="vcr-deck">
        <button id="slow" onclick="engage(1500, 'slow')">SLOW</button>
        <button id="play" onclick="engage(800, 'play')">PLAY</button>
        <button id="ffwd" onclick="engage(200, 'ffwd')">FFWD</button>
        <button onclick="disengage()">STOP</button>
    </div>

    <small onclick="accessVault()" style="margin-top:25px; color:#222; cursor:pointer; letter-spacing:2px;">[ VAULT ACCESS ]</small>

    <div id="vault">
        <h2 style="color:var(--blood); font-family:'MedievalSharp';">SESSION VAULT & LOGS</h2>
        <button onclick="toggleVault()">â¬… EXIT</button>
        <button onclick="exportLogs()" style="background:var(--blood); color:#000;">ðŸ’¾ EXPORT TO FOLDER</button>
        <button onclick="wipeVault()" style="color:red;">âš  PURGE INTERNAL</button>
        <hr style="border:0; border-top:1px solid #222; margin:20px 0;">
        <p>Edit Word Database (Comma separated):</p>
        <textarea id="wordlist">DARK,VOID,LOST,BONE,TIME,NIGHT,COLD,GHOST,STAY,RUN,AWAKE,DEATH,BORN,NEAR,AWAY</textarea>
        <button onclick="saveWords()">SAVE DATABASE</button>
        <div id="vault-content" style="font-family:monospace; font-size:0.8rem; color:#666; margin-top:20px;"></div>
    </div>

    <script>
        let audioCtx, noise, gain, timer, lastWord = "";
        let logs = JSON.parse(localStorage.getItem('spirit_logs') || "[]");
        const PASS = "BETA123";

        function getEntropyWord(list) {
            const cryptoArr = new Uint32Array(1);
            window.crypto.getRandomValues(cryptoArr);
            return list[cryptoArr[0] % list.length].trim();
        }

        function initAudio() {
            if (audioCtx) return;
            audioCtx = new (window.AudioContext || window.webkitAudioContext)();
            const buffer = audioCtx.createBuffer(1, audioCtx.sampleRate * 2, audioCtx.sampleRate);
            const data = buffer.getChannelData(0);
            for (let i = 0; i < data.length; i++) data[i] = Math.random() * 2 - 1;
            noise = audioCtx.createBufferSource();
            noise.buffer = buffer; noise.loop = true;
            gain = audioCtx.createGain(); gain.gain.value = 0.07;
            const filter = audioCtx.createBiquadFilter(); filter.type = 'lowpass'; filter.frequency.value = 700;
            noise.connect(filter); filter.connect(gain); gain.connect(audioCtx.destination);
            noise.start();
        }

        function engage(speed, id) {
            disengage();
            initAudio();
            document.getElementById(id).classList.add('active-btn');
            const words = document.getElementById('wordlist').value.split(',');
            
            timer = setInterval(() => {
                const word = getEntropyWord(words);
                const screen = document.getElementById('screen');
                
                // Glitch Trigger
                if (word === lastWord) screen.classList.add('glitch');
                else screen.classList.remove('glitch');
                
                screen.innerText = word;
                lastWord = word;
                logs.push(`[${new Date().toLocaleTimeString()}] ${word}`);
                localStorage.setItem('spirit_logs', JSON.stringify(logs));
            }, speed);
        }

        function disengage() {
            clearInterval(timer);
            if(audioCtx) { audioCtx.close(); audioCtx = null; }
            document.querySelectorAll('button').forEach(b => b.classList.remove('active-btn'));
            document.getElementById('screen').innerText = "STOP";
            document.getElementById('screen').classList.remove('glitch');
        }

        function accessVault() { if(prompt("Passcode:") === PASS) toggleVault(); }
        function toggleVault() {
            const v = document.getElementById('vault');
            v.style.display = v.style.display === 'block' ? 'none' : 'block';
            document.getElementById('vault-content').innerText = logs.slice(-20).join('\n');
        }

        function saveWords() { localStorage.setItem('custom_words', document.getElementById('wordlist').value); alert("Memory Updated."); }

        function exportLogs() {
            const blob = new Blob([logs.join('\n')], {type: 'text/plain'});
            const a = document.createElement('a');
            a.href = URL.createObjectURL(blob);
            a.download = `Session_${Date.now()}.txt`;
            a.click();
        }

        function wipeVault() { if(confirm("Wipe all tapes?")) { logs = []; localStorage.removeItem('spirit_logs'); toggleVault(); } }

        window.onload = () => { 
            const saved = localStorage.getItem('custom_words');
            if(saved) document.getElementById('wordlist').value = saved;
        };
    </script>
